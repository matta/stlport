#ifndef _STLP_CLOCALE
#  define _STLP_CLOCALE

# ifndef _STLP_OUTERMOST_HEADER_ID
#  define _STLP_OUTERMOST_HEADER_ID  0x108
#  include <stl/_prolog.h>
# endif

#ifndef _STLP_NO_LOCALE_SUPPORT

#  ifdef __BORLANDC__
#   ifndef _STLP_VENDOR_LOCALE_SEEN
#    undef __LOCALE_H
#    define __USELOCALES__
//   use setlocale and *not* _wsetlocale
#    ifdef _UNICODE
#     undef _UNICODE
#     include _STLP_NATIVE_C_HEADER(_loc.h)
#     define _UNICODE
#    else
#     include _STLP_NATIVE_C_HEADER(_loc.h)
#    endif
#    define _STLP_VENDOR_LOCALE_SEEN
#   endif
#  else
# if defined (_STLP_USE_NEW_C_HEADERS)
#  include _STLP_NATIVE_CPP_C_HEADER(clocale)
# else
#  include _STLP_NATIVE_C_HEADER(locale.h)
# endif
#  endif

# ifdef _STLP_IMPORT_VENDOR_CSTD
_STLP_BEGIN_NAMESPACE
using _STLP_VENDOR_CSTD::lconv;
#  if ! defined (_STLP_NO_CSTD_FUNCTION_IMPORTS)
using _STLP_VENDOR_CSTD::localeconv;
using _STLP_VENDOR_CSTD::setlocale;
#  endif
_STLP_END_NAMESPACE
# endif /* _STLP_IMPORT_VENDOR_CSTD */

#endif /* _STLP_NO_LOCALE_SUPPORT */

# if (_STLP_OUTERMOST_HEADER_ID ==  0x108 )
#  include <stl/_epilog.h>
#  undef _STLP_OUTERMOST_HEADER_ID
# endif

#endif /* _STLP_CLOCALE */

// Local Variables:
// mode:C++
// End:
